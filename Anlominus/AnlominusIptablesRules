Banner
IptablesAllowRules(){
  while true; do
    clear
    Banner
    echo ""
    echo "  $cWall▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓$cWall"
    echo "  $cWall▓                                             ▓$cWall"
    echo "  $cWall▓  ╔═══════════════════════════════════════╗  ▓$cWall"
    echo "  $cWall▓  ╠═>       Allow IpTables Rules       <==║  ▓$cWall"
    echo "  $cWall▓  ╠═══════════════════════════════════════╝  ▓$cWall"
    echo "  $cWall▓  ╠═▶ ${ca} Anlominus"
    echo "  $cWall▓  ╠═▶ ${csr} Saving Rules"
    echo "  $cWall▓  ╠═▶ "
    echo "  $cWall▓  ╠═▶ ${c0} Established and Related Incoming Connections"
    echo "  $cWall▓  ╠═▶ ${c1} Established Outgoing Connections"
    echo "  $cWall▓  ╠═▶ ${c2} Loopback Connections"
    echo "  $cWall▓  ╠═▶ ${c3} SMTP"
    echo "  $cWall▓  ╠═▶ ${c4} IMAP"
    echo "  $cWall▓  ╠═▶ ${c5} IMAPS"
    echo "  $cWall▓  ╠═▶ ${c6} POP3"
    echo "  $cWall▓  ╠═▶ ${c7} POP3S"
    echo "  $cWall▓  ╠═▶ ${c8} SSH"
    echo "  $cWall▓  ╠═▶ ${c9} HTTP"
    echo "  $cWall▓  ╠═▶ ${c10} HTTPS"
    echo "  $cWall▓  ╠═▶ "
    echo "  $cWall▓                                             ▓$cWall"
    echo "  $cWall▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓$cWall"
    PromptFun
    read cmd
    case ${cmd} in
      0)
      echo "  ${cInfo} Allow Established and Related Incoming Connections"
      iptables -A INPUT -m conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
      ;;
      1)
      echo "  ${cInfo} Allow Established Outgoing Connections"
      iptables -A OUTPUT -m conntrack --ctstate ESTABLISHED -j ACCEPT
      ;;
      2)
      echo "  ${cInfo} Allow Loopback Connections"
      iptables -A INPUT -i lo -j ACCEPT
      iptables -A OUTPUT -o lo -j ACCEPT
      ReadSomthing
      ;;
      3)
      echo "  ${cInfo} Allow All Incoming SMTP"
      iptables -A INPUT -p tcp --dport 25 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
      iptables -A OUTPUT -p tcp --sport 25 -m conntrack --ctstate ESTABLISHED -j ACCEPT
      ReadSomthing
      ;;
      4)
      echo "  ${cInfo} Allow All Incoming IMAP"
      iptables -A INPUT -p tcp --dport 143 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
      iptables -A OUTPUT -p tcp --sport 143 -m conntrack --ctstate ESTABLISHED -j ACCEPT
      ReadSomthing
      ;;
      5)
      echo "  ${cInfo} Allow All Incoming IMAPS"
      iptables -A INPUT -p tcp --dport 993 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
      iptables -A OUTPUT -p tcp --sport 993 -m conntrack --ctstate ESTABLISHED -j ACCEPT
      ReadSomthing
      ;;
      6)
      echo "  ${cInfo} Allow All Incoming POP3"
      iptables -A INPUT -p tcp --dport 110 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
      iptables -A OUTPUT -p tcp --sport 110 -m conntrack --ctstate ESTABLISHED -j ACCEPT
      ReadSomthing
      ;;
      7)
      echo "  ${cInfo} Allow All Incoming POP3S"
      iptables -A INPUT -p tcp --dport 995 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
      iptables -A OUTPUT -p tcp --sport 995 -m conntrack --ctstate ESTABLISHED -j ACCEPT
      ReadSomthing
      ;;
      8)
      echo "  ${cInfo} Allow All Incoming SSH"
      iptables -A INPUT -p tcp --dport 22 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
      iptables -A OUTPUT -p tcp --sport 22 -m conntrack --ctstate ESTABLISHED -j ACCEPT
      ;;
      9)
      echo "  ${cInfo} Allow All Incoming HTTP"
      iptables -A INPUT -p tcp --dport 80 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
      iptables -A OUTPUT -p tcp --sport 80 -m conntrack --ctstate ESTABLISHED -j ACCEPT
      ;;
      10)
      echo "  ${cInfo} Allow All Incoming HTTPS"
      iptables -A INPUT -p tcp --dport 443 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
      iptables -A OUTPUT -p tcp --sport 443 -m conntrack --ctstate ESTABLISHED -j ACCEPT
      ;;
      x|X|exit|Exit)
      clear
      Banner
      Exiting
      sleep 0.3
      echo ""
      break
      ;;
      *)
      clear
      Banner
      echo ""
      echo "  $cWall░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░$cWall"
      echo "  $cWall░  ╔═══════════════════════════════════════╗  ░$cWall"
      echo "  $cWall░  ╠═>      $cFalse invalid option!! $cFalse${cyan}    <==║  ░$cWall"
      echo "  $cWall░  ╚═══════════════════════════════════════╝  ░$cWall"
      echo "  $cWall░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░$cWall"
      echo ""
      sleep 1
      clear
      ;;
    esac
  done
}
