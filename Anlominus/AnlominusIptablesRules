  echo "  ${cWall}▓${orange}  ┌──[${blue}Anlominus${purple}@${red}IptablesRules${cyan}$~${orange}]             ${cyan}▓$cWall"
  echo -n "  ${cWall}▓${orange}  └──╼ ${green}"
}
ReadSomthing(){
  echo "
  $cWall▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓$cWall
