    echo "  ${cWall}  â• â•>         ${c2} RedHat             <==â•‘  ${cWall}"
    sleep 0.5
    echo "  ${cInfo} Debian Based"
    sleep 1
    netfilter-persistent save
    echo "  ${cInfo} RedHat Based"
    sleep 1
    service iptables save
    ;;
    2)
    echo "
    ${cInfo} List out all of the active iptables rules with verbose
    "
    sleep 1
    iptables -n -L -v
    ReadSomthing
    ;;
    3)
    echo "
    ${cInfo} List out all of the active iptables rules with numeric lines and verbose
    "
    iptables -n -L -v --line-numbers
    ReadSomthing
    ;;
    4)
    echo "
    ${cInfo} Print out all of the active iptables rules
    "
    iptables -S
    ReadSomthing
    ;;
    5)
    echo "
    ${cInfo} List Rules as Tables for INPUT chain
    "
    iptables -L INPUT
    ReadSomthing
    ;;
    6)
    echo "
    ${cInfo} Print all of the rule specifications in the INPUT chain
    "
    iptables -S INPUT
    ReadSomthing
    ;;
    7)
    echo "
    ${cInfo} Show Packet Counts and Aggregate Size
    "
    iptables -L INPUT -v
    ReadSomthing
    ;;
    8)
    echo "
    ${cInfo} Display INPUT/OUTPUT chain rules withs numeric lines and verbose
    "
    iptables -L INPUT -n -v --line-numbers
    iptables -L OUTPUT -n -v --line-numbers
    ReadSomthing
    ;;
    9)
    echo "  ${cInfo} Delete INPUT Rule by Chain and Number"
    echo -n "  ${cInfo} Enter Rule Number: "
    read DeleteRuleNumber
    iptables -D INPUT ${DeleteRuleNumber}
    ReadSomthing
    ;;
    10)
    echo "  ${cInfo} Delete FORWARD Rule by Chain and Number"
    echo -n "  ${cInfo} Enter Rule Number: "
    read DeleteRuleNumber
    iptables -D FORWARD ${DeleteRuleNumber}
    ReadSomthing
    ;;
    11)
    echo "  ${cInfo} Delete OUTPUT Rule by Chain and Number"
    echo -n "  ${cInfo} Enter Rule Number: "
    read DeleteRuleNumber
    iptables -D OUTPUT ${DeleteRuleNumber}
    ReadSomthing
    ;;
    12)
    echo "  ${cInfo} Flush All Rules, Delete All Chains, and Accept All"
    iptables -P INPUT ACCEPT
    iptables -P FORWARD ACCEPT
    iptables -P OUTPUT ACCEPT

    iptables -t nat -F
    iptables -t mangle -F
    iptables -F
    iptables -X
    ReadSomthing
    ;;
    13)

    ReadSomthing
    ;;
    14)
    echo "  ${cInfo} Flush a Single Chain"
    echo -n "  ${cInfo} Enter INPUT or FORWARD or OUTPUT: "
    read DeleteRuleName
    iptables -F ${DeleteRuleName}
    ReadSomthing
    ;;
    x|X|exit|Exit)
    clear
    Banner
    Exiting
    sleep 0.3
    echo ""
    break
    ;;
    *)
    clear
    Banner
    echo ""
    echo "  $cWallâ–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘$cWall"
